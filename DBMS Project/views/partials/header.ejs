      body {
    background: linear-gradient(135deg, #ffffff, #ffffff);
    font-family: 'Poppins', sans-serif;
  }
  
  .login-card {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(12px);
    border-radius: 20px;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.2);
    padding: 40px;
    max-width: 400px;
    margin: auto;
    margin-top: 100px;
    color: #fff;
    animation: slideIn 0.6s ease-out;
  }
  
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .login-title {
    text-align: center;
    margin-bottom: 30px;
    font-size: 28px;
    font-weight: bold;
    color: #fff;
  }
  
  .form-control {
    background: rgba(255, 255, 255, 0.7);
    border: none;
    border-radius: 12px;
    padding-left: 40px;
    color: #000;
    transition: box-shadow 0.3s;
  }
  
  .form-control:focus {
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.4);
  }
  
  .form-outline {
    position: relative;
    margin-bottom: 25px;
  }
  
  .form-outline i {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #1d3557;
  }
  
  .btn-primary {
    background-color: #1d3557;
    border: none;
    border-radius: 12px;
    width: 100%;
    font-size: 18px;
    transition: background-color 0.3s ease;
  }
  
  .btn-primary:hover {
    background-color: #16324f;
  }
  
  .extra-options {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
    font-size: 14px;
  }
  
  .extra-options a {
    color: #e0e0e0;
    text-decoration: none;
  }
  
  .extra-options a:hover {
    text-decoration: underline;
  }
  
