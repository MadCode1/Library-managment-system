<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>📘 Library Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      background-color: #f0f2f5;
      font-family: 'Segoe UI', sans-serif;
    }
    .sidebar {
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      width: 240px;
      background: #1f2937;
      color: white;
      padding: 1.5rem;
    }
    .sidebar h3 {
      font-weight: 600;
      margin-bottom: 2rem;
    }
    .sidebar .as {
      display: block;
      color: #cbd5e1;
      text-decoration: none;
      margin-bottom: 1rem;
      padding: 0.5rem;
      border-radius: 0.4rem;
      transition: all 0.2s ease;
    }
    .sidebar .as:hover {
      background: #374151;
      color: #ffffff;
    }
    .content {
      margin-left: 260px;
      padding: 2rem;
    }
    .dashboard-title {
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 2rem;
    }
    .card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
    .card h5 {
      font-weight: 500;
    }
    .chart-container {
      background: #ffffff;
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
      margin-top: 2rem;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <h3>📘 Library Admin</h3>
    <a href="" class="as">🏠 Dashboard</a>
    <a href="/manag/users" class="as">👥 Manage Users</a>
    <a href="/manag/books" class="as">📚 Manage Books</a>
    <a href="/borrow-records" class="as">📄 Borrow Records</a>
    <!-- <a href="#" class="as">💰 Fines</a> -->
    <form   action="/admin/logout" method="GET">
    <!-- <input type="text" value="logout" placeholder="logout" name="logout"> -->
    <a href="#" ><button class="as" style="background-color: #1f2937;" value="logout">🚪 Logout</button></a>
    </form>
    </div>

  <!-- Content -->
  <div class="content">
    <div class="dashboard-title">Welcome, <%= admin.name %> 👋</div>

    <div class="row g-4">
      <div class="col-md-3">
        <div class="card text-bg-primary p-3">
          <h5>Total Users 👥</h5>
          <p class="fs-3">120</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-bg-success p-3">
          <h5>Total Books 📚</h5>
          <p class="fs-3">550</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-bg-warning p-3">
          <h5>Active Borrows 🔄</h5>
          <p class="fs-3">34</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-bg-danger p-3">
          <h5>Pending Fines 💸</h5>
          <p class="fs-3">₹450.00</p>
        </div>
      </div>
    </div>

    <!-- Data Visualization -->
    <div class="chart-container mt-5">
      <h5 class="mb-4">📊 Book Borrow Trend (Static Demo)</h5>
      <canvas id="borrowChart" height="120"></canvas>
    </div>
  </div>

  <script>
    const ctx = document.getElementById('borrowChart').getContext('2d');
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
        datasets: [{
          label: 'Books Borrowed',
          data: [50, 75, 60, 90, 80],
          backgroundColor: '#4f46e5',
          borderRadius: 6
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true
          }
        },
        plugins: {
          legend: {
            display: false
          }
        }
      }
    });
  </script>

</body>
</html>
