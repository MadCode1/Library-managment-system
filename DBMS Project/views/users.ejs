<%- include('partials/header.ejs') %>

<h3>Users List</h3>
<table border="1">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.user_id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= user.created_at.toISOString().slice(0,10) %></td>
        <td>
          <a href="/user/edit/<%= user.user_id %>"><button>Edit</button></a>
          <a href="/user/delete/<%= user.user_id %>" onclick="return confirm('Are you sure?');"><button>Delete</button></a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('partials/footer.ejs') %>
